<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStudy.Pages.ActivityIndicatorSample"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator
                Color="{DynamicResource AccentColor}"
                IsRunning="true" />
            <ActivityIndicator
                Color="{DynamicResource AccentColor}"
                IsRunning="false" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
