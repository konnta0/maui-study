<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStudy.Pages.ButtonSample"
             xmlns:model="clr-namespace:MauiStudy.Models;assembly=MauiStudy"
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <model:ButtonSampleViewModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <Button Text="Set Background Color"
            BackgroundColor="Yellow"/>
        <Button Text="CharacterSpacing"
            CharacterSpacing="10"/>
        <Button Text="Clicked"
            Clicked="OnClicked"/>
        <Button Text="Binding Command"
            Command="{Binding OnCommandSample}"/>
        <Label Text="{Binding RecievedOnCommandSampleCount, StringFormat='Value is now {0}'}"
               FontSize="Large"
               TextColor="Black"
               BackgroundColor="Red"/>
    </StackLayout>
</ContentPage>
