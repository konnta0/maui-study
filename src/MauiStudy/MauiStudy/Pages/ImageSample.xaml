<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStudy.Pages.ImageSample"
             BackgroundColor="White">
    <ScrollView>
        <StackLayout>
            <Label Text="Aspect AspectFill" TextColor="Black" />
            <Image Aspect="AspectFill" Source="dotnet_bot.png" WidthRequest="50" HeightRequest="50" BackgroundColor="Blue" />

            <Label Text="Aspect AspectFit" TextColor="Black" />
            <Image Aspect="AspectFit" Source="dotnet_bot.png" WidthRequest="50" HeightRequest="50" BackgroundColor="Blue"/>

            <Label Text="Aspect Fill" TextColor="Black" />
            <Image Aspect="Fill" Source="dotnet_bot.png" WidthRequest="50" HeightRequest="50" BackgroundColor="Blue"/>

        </StackLayout>
    </ScrollView>
</ContentPage>